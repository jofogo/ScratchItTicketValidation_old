<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValidationActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/menu_top"
        app:columnCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:onClick="menuPressed"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:layout_column="3"
            app:layout_gravity="center|right"
            app:layout_row="0"
            app:srcCompat="@drawable/ico_menu" />

        <ImageButton
            android:id="@+id/btnAbout"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_gravity="center|right"
            app:layout_row="0"
            app:srcCompat="@drawable/ico_about" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_gravity="right|center"
            app:layout_row="0"
            app:srcCompat="@drawable/ico_settings" />

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:onClick="userLogout"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/ico_logout" />

    </android.support.v7.widget.GridLayout>

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/tViewScanner"
        android:layout_width="318dp"
        android:layout_height="240dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="40dp" >

    </com.journeyapps.barcodescanner.DecoratedBarcodeView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tViewScanner"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/lblTicketCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtTicketCount"
        android:layout_alignStart="@+id/txtTicketCode"
        android:text="No. of Tickets:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtTicketCount"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/divider"
        android:layout_marginEnd="63dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/txtTicketCode"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTicketCount"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Ticket code"
        android:inputType="number"

        android:textAlignment="center" />

    <android.support.v7.widget.GridLayout
        android:layout_width="320dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        app:columnCount="3"
        app:rowCount="1">

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="ticketAdd"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="0"
            app:srcCompat="@drawable/ico_disabled_add" />

        <ImageButton
            android:id="@+id/btnUpload"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="0"
            app:srcCompat="@drawable/ico_disabled_upload" />

        <ImageButton
            android:id="@+id/btnTorch"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="toggleTorch"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="0"
            app:srcCompat="@drawable/ico_disabled_torch" />
    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/btnTicketCount"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/txtTicketCount"
        android:layout_below="@+id/tViewScanner"
        android:layout_marginTop="3dp"
        android:enabled="false"
        android:onClick="ticketList"
        android:text="000" />
</RelativeLayout>